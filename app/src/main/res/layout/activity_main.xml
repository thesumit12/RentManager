<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/plot737"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_plot_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/plot578"/>

        <ImageView
            android:id="@+id/plot578"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_plot_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/plot737"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/plot737"
            app:layout_constraintEnd_toEndOf="@id/plot737"
            app:layout_constraintTop_toBottomOf="@id/plot737"
            android:text="Plot 737"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/plot578"
            app:layout_constraintEnd_toEndOf="@id/plot578"
            app:layout_constraintTop_toBottomOf="@id/plot578"
            android:text="Plot 578"
            android:textSize="22sp"
            android:textStyle="bold"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
